<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/medium" />
    <include
        android:id="@+id/chat_date"
        layout="@layout/item_chat_date"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <include
        android:id="@+id/chat_left"
        layout="@layout/item_chat_left"
        android:visibility="gone"
        tools:visibility="visible"/>
    <include
        android:id="@+id/chat_right"
        layout="@layout/item_chat_right"
        android:visibility="gone"
        tools:visibility="visible"/>
    <include
        android:id="@+id/chat_urgent"
        layout="@layout/item_chat_urgent_right"
        android:visibility="gone"
        tools:visibility="visible"/>
    <include
        android:id="@+id/chat_vn_right"
        layout="@layout/item_chat_voice_note_right"
        android:visibility="gone"
        tools:visibility="visible"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/medium" />

</androidx.appcompat.widget.LinearLayoutCompat>